#: documentation/content/en/books/porters-handbook/makefiles/chapter.adoc:4317
#, no-wrap
msgid ""
"OPTIONS_DEFINE=\tOPT1\n"
"OPT1_LIB_DEPENDS=\tliba.so:devel/a\n"
"OPT1_LIB_DEPENDS_OFF=\tlibb.so:devel/b\n"
msgstr ""

#. type: delimited block .
#: documentation/content/en/books/porters-handbook/makefiles/chapter.adoc:4332
