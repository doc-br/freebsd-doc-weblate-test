#, no-wrap
msgid ""
"  if (argc < 2) {\n"
"    printf(\"Usage: Uliscan filename\\n\");\n"
"    exit(-1);\n"
"  } else {\n"
"    printf(\"Measuring file %s\\n\", argv[1]);\n"
"  }\n"
msgstr ""

#. type: delimited block .
#: documentation/content/en/articles/ipsec-must/_index.adoc:190
#, no-wrap
msgid "  fptr = fopen(argv[1],\"rb\");\n"
msgstr ""

#. type: delimited block .
